{
  "compilerOptions": {
    "target": "ES6",                      
    "module": "commonjs",                 
    "strict": true,                       
    "esModuleInterop": true,              
    "outDir": "./dist",                   
    "rootDir": "./src",                   
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true                  
  },
  "include": ["src/**/*"],                
  "exclude": ["node_modules", "**/*.spec.ts"] 
}
